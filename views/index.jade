

include layouts/menu
#main.container

	#portfolio
		ul.unstyled.js-wrapper.row
			- if(typeof posts !== "array")
				- posts.forEach(function(item) {
					li.span12.js-card
						.view
							.legend
								h2.slabtexted !{item.title}
								strong.btn.btn-primary=_("En savoir plus")
							.wrapper
								- if(item.thumbnail)
									img(src=item.thumbnail)
								else
									img(src="/images/gallery/4268986830_edccb88587_b_d.jpg")
						.about		
							.row	
								a.back
									i.icon-circle-arrow-left.icon-white
									=_("Retour")
								h3 !{item.title}
								article !{item.content}
								- if(item.siteurl)
									a(href=item.siteurl).siteurl
										i.icon-globe.icon-white
										=item.siteurl
								- if(item.tags.length > 0)
									ul.tags.unstyled
										- item.tags.forEach(function(tag) {
											li=tag.title
										- })										
				- })

	- if(typeof posts !== "array")
		ul#portfolio-nav.unstyled
			- posts.forEach(function(item) {
					li.right10
			- })			

	hr.soften




include layouts/menu
#main.container

	#portfolio
		ul.unstyled.js-wrapper.row
			- if(typeof posts !== "array")
				- posts.forEach(function(item) {
					li.js-card
						.view
							.wrapper
								img(src=item.thumbnail)
							.legend
								h2.slabtexted.hidden-phone !{item.title}
								h2.visible-phone.tl !{item.title}
								.btn.btn-primary.btn=_("See more")
						.about		
							.row	
							
								.visible-desktop
									a.back
										i.icon-circle-arrow-left.icon-white
										=_("Back")
								
									h3 !{item.title}
									article !{item.content}

									- if(item.tags.length > 0)
										ul.tags.unstyled
											- item.tags.forEach(function(tag) {
												li=tag.title
											- })			

									- if(item.siteurl)
										a(href=item.siteurl, rel='external').siteurl
											i.icon-globe.icon-white
											=item.siteurl		

								.hidden-desktop
									a.back
										i.icon-circle-arrow-left.icon-white
										=_("Back")
								
									h3 !{item.title}
									article !{item.content}

									- if(item.siteurl)
										a(href=item.siteurl, rel='external').siteurl
											i.icon-globe.icon-white
											=item.siteurl							
				- })

	- if(typeof posts !== "array")
		ul#portfolio-nav.unstyled
			- posts.forEach(function(item) {
					li.right10
			- })	

	hr.soften

	ul#team.row.no-bullet.top40
		li.span2.offset2
			.pp
				img(src="/images/team/nkb.jpg")
			.link
				a(href="http://twitter.com/nicolaskb", rel='external')
					img(src="/images/twitter-bird-dark-bgs.png").left05
			h3 Nicolas Kayser-Bril 
			p=_("CEO &bullet; Data-journalist")
		li.span2.offset1
			.pp
				img(src="/images/team/pr.jpg")
			.link
				a(href="http://twitter.com/pirhoo", rel='external')
					img(src="/images/twitter-bird-dark-bgs.png").left05
			h3 Pierre Romera 
			p=_("CTO &bullet; Developer")
		li.span2.offset1
			.pp
				img(src="/images/team/alb.jpg")
			.link
				a(href="http://twitter.com/annelisebouyer", rel='external')
					img(src="/images/twitter-bird-dark-bgs.png").left05
			h3 Anne-Lise Bouyer 
			p=_("Project manager")

	-if( about )
		hr.soften

		#about
			.row
				.span10.offset1
					h2 !{about.title}
					article !{about.content}

include layouts/footer